# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development
LOG_LEVEL=info

# OpenTelemetry Configuration
SERVICE_NAME=hello-world-api
SERVICE_VERSION=local-dev
SERVICE_INSTANCE_ID=local
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# GitHub Authentication Configuration
# Option 1: GitHub App Authentication (Recommended)
GITHUB_APP_ID=123456
GITHUB_INSTALLATION_ID=12345678
GITHUB_APP_PRIVATE_KEY_PATH=/path/to/your/github-app-private-key.pem

# Option 2: Personal Access Token (Fallback)
GITHUB_TOKEN=github_pat_yourgithubtokenhere

# GitHub API Configuration
GITHUB_GRAPHQL_URL="https://api.github.com/graphql"
GITHUB_REST_URL="https://api.github.com"
OPENTELEMETRY_DOCS_REPO="open-telemetry/opentelemetry.io"
